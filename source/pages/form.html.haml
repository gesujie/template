-@title= 'From | Admin Page '
-@page_classes= 'form'

.easyui-layout{fit:'true'}
  .easyui-panel{title:'Form Live Example', 'data-options' => "region:'center', iconCls:'fa fa-text-height', headerCls:'panel-header-primary', bodyCls:'panel-body-default', collapsible:false"}
    .container
      .col-6.mb-10
        %form
          .form-group
            %label Email address
            %input.form-control{placeholder: 'Enter email', type: 'email'}
          .form-group
            %label Password
            %input.form-control{placeholder: 'Password', type: 'password'}
          .form-group
            %label File input
            %input{type: 'file'}
              %p.help-block Example block-level help text here.
          .checkbox
            %label
              %input{type: 'checkbox'}
                Check me out
          %button.easyui-linkbutton.color-primary{type: 'submit'} Submit
      .col-6.col-last.mb-10
        %form.form-horizontal
          .form-group
            %label.col-2.control-label Email
            .col-10.col-last
              %input.form-control{placeholder: 'Email', type: 'email'}
          .form-group
            %label.col-2.control-label Password
            .col-10.col-last
              %input.form-control{placeholder: 'Password', type: 'password'}
          .form-group
            .col-push-2.col-10
              .checkbox
                %label
                  %input{type: 'checkbox'}
                    Remember me
          .form-group
            .col-push-2.col-10
              %button.easyui-linkbutton.color-primary{type: 'submit'} Sign in
    .container
      .col-8
        .panel
          .panel-header.panel-header-info
            .panel-title Form with by Icon
          .panel-body-default
            %form.form-inline
              .form-group
                %label Email address
                %input.form-control.easyui-textbox{'data-options' => "prompt:'Email', width:200, height:34, iconCls:'fa fa-user', iconWidth:38", type: 'text'}
              .form-group
                %label Password
                %input.form-control.easyui-textbox{'data-options' => "prompt:'Password', width:200, height:34, iconCls:'fa fa-lock', iconWidth:38", type: 'password'}
              %button.easyui-linkbutton.color-primary{type: 'submit'} Submit
      .col-4.col-last
        .panel
          .panel-header.panel-header-info
            .panel-title Button with by Icon
          .panel-body-default
            %input.easyui-textbox{'data-options' => "buttonText:'Search',buttonIcon:'fa fa-search',prompt:'Search...', width:280, height:34"}
