-@title= 'Tree | Admin Page '
-@page_classes= 'tree'

.container
  .col-6
    .panel.panel-primary
      .panel-header
        %h3.panel-title
          Tree
      %ul.easyui-tree#tt{'data-options':"url:'assets/javascripts/json/demoData/tree_data1.json',method:'get',animate:true,checkbox:true, lines:true"}
      .panel-footer
        %small Tree folder with by lines
  %hr.col-12
  .col-12
    .panel.panel-primary
      .panel-header
        .panel-icon.fa.fa-code
        %h3.panel-title.panel-with-icon
          Tree | Source Code
      .panel-body
        :code
          # lang: html
          <ul class="easyui-tree" id="tt" data-options="url:'assets/javascripts/json/demoData/tree_data1.json', method:'get', animate:true, checkbox:true, lines:true">
          </ul>
  %hr.col-12
  .col-6
    .panel.panel-primary
      .panel-header
        %h3.panel-title
          Tree Grid
      %table.easyui-treegrid{'data-options':"method: 'get', rownumbers: true, idField: 'id', treeField: 'name', url:'assets/javascripts/json/datagridData/treegrid_data1.json'"}
        %thead
          %tr
            %th{'data-options':"field:'name'", width:'220'}
              Name
            %th{'data-options':"field:'size'", width:'100'}
              Size
            %th{'data-options':"field:'date'", width:'150'}
              Modified Date
      .panel-footer
        %small Tree folder with by lines
  %hr.col-12
  .col-12
    .panel.panel-primary
      .panel-header
        .panel-icon.fa.fa-code
        %h3.panel-title.panel-with-icon
          Tree Grid | Source Code
      .panel-body
        :code
          # lang: html
          <table class="easyui-treegrid" data-options="method: 'get', rownumbers: true, idField: 'id', treeField: 'name', url:'assets/javascripts/json/datagridData/treegrid_data1.json'">
            <thead>
              <tr>
                <th data-options="field:'name'" width:220>
                  Name
                </th>
                <th data-options="field:'size'" width:100>
                  Size
                </th>
                <th data-options="field:'date'" width:150>
                  Modified Date
                </th>
              </tr>
            </thead>
          </table>
